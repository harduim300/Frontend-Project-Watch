{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/" },
    { "source": "/register", "destination": "/register" },
    { "source": "/tasks/dashboard", "destination": "/tasks/dashboard" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
} 